<Window x:Class="ListViewHW.NewPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListViewHW"
        mc:Ignorable="d"
        Title="NewPerson" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Name: "/>
            <TextBox Text="{Binding Name}"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Surname: "/>
            <TextBox Text="{Binding Surname}"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Content="Birthday: "/>
            <DatePicker Text="{Binding Birthday}"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Label Content="ID: "/>
            <TextBox Text="{Binding Id}"/>
        </StackPanel>
        <Button x:Name="NewPerBut" Content="Add/Edit" Grid.Row="4" Margin="10, 10"
                Click="NewPerBut_Click"/>
    </Grid>
</Window>
